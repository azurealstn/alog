{{>layout/header-dark}}

<div class="detail">
    <div class="detail-top">
        <input type="hidden" id="postsId" value="{{posts.id}}">
        {{#member}}
        <input type="hidden" id="memberId" value="{{member.id}}">
        {{/member}}
        {{^member}}
        <input type="hidden" id="memberId" value="">
        {{/member}}
        <input type="hidden" id="secret" value="{{posts.secret}}">
        <div class="head-wrapper">
            <h1>{{posts.title}}</h1>
            {{#isAuthenticated}}
                <div class="modify-posts-buttons">
                    <button id="update-btn">수정</button>
                    <button id="delete-btn" onclick="postsMain.deletePosts({{posts.id}})">삭제</button>
                </div>
            {{/isAuthenticated}}
            <div class="posts-info">
                <div class="information">
                    <span class="username">
                      <a href="/api/v1/my-alog/{{posts.member.id}}">{{posts.member.name}}</a>
                    </span>
                    <span class="separator">·</span>
                    <span>{{previousPostsDate}}</span>
                    {{#isSecret}}
                        <span class="separator">·</span>
                        <div class="isSecret-area">
                            <i class="fa-solid fa-lock"></i>
                            <span>비공개</span>
                        </div>
                    {{/isSecret}}
                </div>
                <div class="posts-likes">
                    {{#existHeart}}
                    <button class="like-btn active">
                        <i class="fa-solid fa-heart active"></i>
                        <span class="active">{{likeCount}}</span>
                    </button>
                    {{/existHeart}}
                    {{^existHeart}}
                        <button class="like-btn">
                            <i class="fa-solid fa-heart"></i>
                            <span class="">{{likeCount}}</span>
                        </button>
                    {{/existHeart}}
                </div>
            </div>
            <div class="posts-tags">
                {{#hashTagList}}
                <a href="/api/v1/auth/tags/{{name}}" class="tag">{{name}}</a>
                {{/hashTagList}}
                {{^hashTagList}}
                {{/hashTagList}}
            </div>
            <div class="quick-menu">
                <div class="menu-like">
                    <div class="menu-container">
                        {{#existHeart}}
                        <div class="like-heart active">
                            <i class="fa-solid fa-heart"></i>
                        </div>
                        {{/existHeart}}
                        {{^existHeart}}
                            <div class="like-heart">
                                <i class="fa-solid fa-heart"></i>
                            </div>
                        {{/existHeart}}
                        <div class="like-count">{{likeCount}}</div>
                    </div>
                </div>
            </div>
        </div>
        <img src="/images/thumbnail.jpg" alt="posts-thumbnail" class="thumbnail-img">
    </div>
    <div class="detail-bottom">
        <div class="posts-body">
            <!-- toast ui editor viewer -->
            <div id="viewer">

            </div>
        </div>
    </div>
    <div class="member-info">
        <div class="member-container">
            <div class="info">
                <a href="#">
                    <img src="/images/ex-thumbnail-profile.jpg" alt="프로필 사진">
                </a>
                <div class="sub-info">
                    <div class="name">
                        <a href="#">{{posts.member.name}}</a>
                    </div>
                    <div>{{posts.member.shortBio}}</div>
